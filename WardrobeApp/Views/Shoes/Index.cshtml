@model IEnumerable<WardrobeApp.Models.Shoe>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ShoeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShoeColor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShoePhoto)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ShoeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShoeColor)
        </td>
        <td>
            <img class ="photo" src="@Url.Content(item.ShoePhoto)" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ShoesID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ShoesID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ShoesID })
        </td>
    </tr>
}

</table>
